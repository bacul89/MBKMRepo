@model MBKM.Entities.ViewModel.VMLookup

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="modal-content data-content-modal" id="created-user-template">
    <div class="modal-header" style="background-color: #FF8A04; ">
        <h5 class="card-title" style="font-weight: bold; font-size: 30px; color: black;">
            TAMBAH LOGIN USER
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="frmSave">
            <div class="form-group" id="frmAddUser">
                <label for="nomorindukpegawai" class="col-sm-3 control-label">Nomor Induk Pegawai</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran" id="txtnomorindukpegawai" placeholder="Input Induk Pegawai">
                </div>
            </div>
            <div class="form-group">
                <label for="inp_email" class="col-sm-3 control-label">Nama</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran" id="txtnama" placeholder="Input Nama">
                </div>
            </div>
            <div class="form-group">
                <label for="inp_bodyEmail" class="col-sm-3 control-label">Alamat Email</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control input-pendaftaran" id="txtemail" placeholder="Input Alamat Email">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control input-pendaftaran" id="txtpassword" placeholder="Input Password">
                </div>
            </div>
            <div class="form-group row">
                @if (ViewBag.listJabatan != null)
                {
                    <label for="Jabatan" class="col-sm-3 control-label">Jabatan</label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.Nilai, ViewBag.listJabatan as SelectList, "--Pilih Jabatan--", new { @class = "form-control input-pendaftaran",@id = "idRole" })
                    </div>
                }
            </div>
            @*<div class="form-group row">
                @if (ViewBag.listProdi != null)
                {
                    <label for="Prodi" class="col-sm-3 control-label">Prodi</label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.Nilai, ViewBag.listProdi as SelectList, "--Pilih Prodi--", new { @class = "form-control prodi" })
                    </div>
                }
            </div>*@
              <div class="form-group">
              
                <label for="prodiUnit" class="col-sm-3 control-label">Program Studi/Unit</label>
                    <div class="col-sm-9">
                    <select name="prodiUnit" id="prodiUnit" class="form-control input-pendaftaran" required>
                        <option>Program Studi/Unit</option>
                        <option value="uaj">UAJ</option>
                        <option value="umn">UMN</option>
                    </select>
                    
                </div>
             </div>
            <div class="form-group">
                <label for="inp_status" class="col-sm-3 control-label">Status</label>
                <div class="col-sm-9">
                    <label class="radio-inline input-pendaftaran">
                        <input type="radio" name="inpStatus" id="inp_status" value="1"> Aktif
                    </label>
                    <label class="radio-inline input-pendaftaran">
                        <input type="radio" name="inpStatus" id="inp_status" value="0"> Tidak Aktif
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-md-offset-10">
                    <button type="submit"onclick="tesRole()" class="btn btn-warning">Simpan</button>
                </div>
            </div>
        </form>
    </div>
</div>
