@model MBKM.Entities.ViewModel.VMLookup

   


@{
    ViewBag.Title = "Index";
    Layout = null;
}

<div class="modal-content data-content-modal" id="created-user-template">
    <div class="modal-header" style="background-color: #FF8A04; ">
        <h5 class="card-title" style="font-weight: bold; font-size: 30px; color: black;">
            TAMBAH LOGIN USER
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <form class="form-horizontal" id="frmSave">
            <div class="form-group" id="frmAddUser">
                <label for="txtnomorindukpegawai" class="col-sm-3 control-label">Nomor Induk Pegawai</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" id="txtnomorindukpegawai" name="txtnomorindukpegawai" placeholder="Input Induk Pegawai">
                </div>
            </div>
            <div class="form-group">
                <label for="txtnama" class="col-sm-3 control-label">Nama</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" id="txtnama" name="txtnama" placeholder="Input Nama">
                </div>
            </div>
            <div class="form-group">
                <label for="txtemail" class="col-sm-3 control-label">Alamat Email</label>
                <div class="col-sm-9">
                    <input type="email" class="form-control input-pendaftaran input-data" id="txtemail" name="txtemail" placeholder="Input Alamat Email">
                </div>
            </div>
            <div class="form-group">
                <label for="txtpassword" class="col-sm-3 control-label">Password</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control input-pendaftaran input-data" id="txtpassword" placeholder="Input Password">
                </div>
            </div>
            <div id="divRole" class="form-group row">
                @if (ViewBag.listJabatan != null)
                {
                    <label for="IdRole" class="col-sm-3 control-label">Jabatan</label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.Nilai, ViewBag.listJabatan as SelectList, "--Pilih Jabatan--", new { @class = "form-control input-pendaftaran input-data", @id = "idRole", @name = "idRole" })
                    </div>
                }
            </div>
            <div id="divSpecialRole" class="form-group row" hidden>
                <label class="col-sm-3 control-label">tempelIfNotKaprodi</label>
                <div class="col-sm-9">
                    <input type="text" value="" class="form-control input-pendaftaran" disabled="disabled" id="specialRole" name="specialRole">

                </div>
            </div>
            <div class="form-group" id="divFakultas" hidden>
                <label for="inp_fakultas" class="col-sm-3 control-label">Fakultas</label>
                <div class="col-sm-9">
                    <select name="fakultasCari" id="fakultasCari" class="form-control input-md input-data"></select>
                </div>
            </div>
            <div id="divProdi" class="form-group row" hidden>
                @if (ViewBag.listProdi != null)
                {
                    <label for="idProdi" class="col-sm-3 control-label">Prodi</label>
                    <div class="col-sm-9">
                        @* @Html.DropDownList("IDProdiAndNamaProdi", ViewBag.listProdi as SelectList, "First Option", new { name = "Name", id = "id" })*@
                        @Html.DropDownListFor(model => model.Nama, ViewBag.listProdi as SelectList, "--Pilih Prodi/unit--", new { @class = "form-control input-pendaftaran", @id = "idProdi", @name = "idProdi" })
                    </div>
                }
            </div>
            <div class="form-group">
                <label for="txtpassword" class="col-sm-3 control-label">KPTSNIDN</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran" id="txtKPTSDIN" placeholder="Input KPTSNIDN">
                </div>
            </div>
            <div class="form-group">
                <label for="inp_status" class="col-sm-3 control-label">Status</label>
                <div class="col-sm-9">
                    <label class="radio-inline input-pendaftaran">
                        <input type="radio" name="inpStatus" id="inp_status" value="1" checked> Aktif
                    </label>
                    <label class="radio-inline input-pendaftaran">
                        <input type="radio" name="inpStatus" id="inp_status" value="0"> Tidak Aktif
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-md-offset-10">
                    <button type="button" onclick="PostCreate2()" class="btn btn-warning">Simpan</button>
                </div>
            </div>
        </form>
    </div>
</div>
