
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}

@section css{

    <link rel="stylesheet" type="text/css" href="~/Content/Admin/inputResponsive.css">
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
}

<div class="card-body responsive-content" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); border: 3px solid coral; padding: 0px">
    <h6 class="card-title" style="padding-top: 30px; padding-right: 20px; padding-left: 30px; font-weight: bold; font-size: 25px; color: black;">
        REKAP MAHASISWA MBKM<br />
    </h6>
    <hr />
    <div class="container" style="width: 100%;">
        <div class="">
            <form class="form-horizontal col-md-5">
                <div class="form-group">
                    <br />
                    <label for="inp_semester" class="col-sm-3 control-label">Tahun Semester</label>
                    <div class="col-sm-7">
                        <select name="inp_semester" id="inp_semester" class="form-control select2 input-md input-data">
                            <option value="" selected disabled>-- Pilih Tahun Semester --</option>
                            @{
                                foreach (var dt in ViewData["semester"] as IEnumerable<MBKM.Entities.ViewModel.VMSemester>)
                                {
                                    <option value="@dt.Nilai">@dt.Nama</option>
                                }
                            }
                        </select>
                        <br />
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 " >
                        <button type="button" id="cari" class="btn btn-success" style="width: 10vw" onclick="GenerateDataTable()"><span class="fa fa-search"></span> CETAK PDF</button>
                        <button type="button" id="cari" class="btn btn-danger" style="width: 10vw" onclick="GenerateDataTable()"><span class="fa fa-search"></span> CETAK EXCEL</button>
                    </div>
                </div>
            </form>
        </div>
        <!--table-responsive-->
        <table id="table-data-rekap-mahasiswa" class="table row-border hover dt-responsive responsive" style="border-spacing: 0 15px; border:0">
            <thead>
                <tr>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">No</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Tahun Semester</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Jenjang Studi</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Fakultas</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Program Studi</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Lokasi</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Internal</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Internal Ke Luar</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Eksternal</th>
                    <th class="zero-padding2 small-text no-border vertical-center center sorting">Non Pertukaran</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <br />
        <br />
        <br />
        <br />
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Admin/ReportMahasiswaMBKM/main.js"></script>
}
