
@{
    Layout = null;
}
@model MBKM.Entities.Models.Menu

<div class="modal-content data-content-modal" id="detail-Menu">
    <div class="modal-header" style="background-color: #FF8A04; ">
        <h5 class="card-title" style="font-weight: bold; font-size: 30px; color: black;">
            DETAIL MENU
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="Code" class="col-sm-3 control-label">Menu Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" name="MenuName" id="MenuName" placeholder="Input Menu Name" value="@Model.MenuName" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="Code" class="col-sm-3 control-label">Menu Description</label>
                <div class="col-sm-9">
                    <textarea class="form-control input-pendaftaran input-data" name="MenuDescription" id="MenuDescription" placeholder="Input Menu Description" disabled>@Model.MenuDescription</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="Code" class="col-sm-3 control-label">Menu Url</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" name="MenuUrl" id="MenuUrl" placeholder="Input Menu Url" value="@Model.MenuUrl" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="inp_status" class="col-sm-3 control-label">Status</label>
                <div class="col-sm-9">
                    @{
                        if (Model.IsActive)
                        {
                            <input type="email" class="form-control input-pendaftaran" value="Aktif" name="inp_email" id="inp_email" placeholder="Input Subject Email" disabled>
                        }
                        else
                        {
                            <input type="email" class="form-control input-pendaftaran" value="Tidak Aktif" name="inp_email" id="inp_email" placeholder="Input Subject Email" disabled>
                        }
                    }
                </div>
            </div>
        </form>
    </div>
</div>
