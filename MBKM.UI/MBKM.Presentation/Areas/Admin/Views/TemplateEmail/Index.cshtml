
@{
    ViewBag.Title = "MANAGE TEMPLATE EMAIL";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}
@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/inputResponsive.css">
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/summernote/summernote.min.css" rel="stylesheet" />
    <script src="~/Scripts/sweetalert2.all.min.js"></script>

}
@section modal{
    <div class="modal fade" id="TambahMasterLookUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" id="modal-inner">

        </div>
    </div>
}

<div class="container-fluid" style="padding:0px">
    <div class="card center-block" style="background-color: white; width: 100%;">
        <div class="card-body" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); border:3px solid coral">
            <h4 class="card-title" style="padding-top: 30px; padding-right: 20px; padding-left: 30px; font-weight: bold; font-size: 30px; color: black;">
                MANAGE TEMPLATE EMAIL
            </h4>
            <hr />
            <div class="container" style="width: 100%;">
                <button class="btn btn-success" onclick="IndexCreateEmailTemplate()"><i class="fas fa-plus-circle"></i> Tambah Template Email</button>
                <br />
                <br />
                <table id="table-data-email-template" class="table row-border hover dt-responsive responsive" style="border-spacing: 0 15px; border:0">
                    <thead class="text-center">
                        <tr style="background-color: #FF8A04; border: 0 ">
                            <th class="zero-padding no-border vertical-center" style="text-align:center">Action</th>
                            <th class="zero-padding no-border vertical-center" style="text-align:center">No.</th>
                            <th class="zero-padding no-border vertical-center" style="text-align:center">Tipe Email</th>
                            <th class="zero-padding no-border vertical-center" style="text-align:center">Subject Email</th>
                            <th class="zero-padding no-border vertical-center" style="text-align:center">Body Email</th>
                            <th class="zero-padding no-border vertical-center" style="text-align:center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <br />
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/summernote/summernote.min.js"></script>
    <script src="~/Scripts/Admin/TemplateEmail/main.js"></script>
    <script src="~/Scripts/Admin/TemplateEmail/crud.js"></script>
    <script src="~/Scripts/loading/loadingoverlay.min.js"></script>
}

