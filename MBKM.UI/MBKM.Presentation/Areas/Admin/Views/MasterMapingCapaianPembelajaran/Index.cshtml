        function loadJenjangStudi(tipe, id, nama) {
            $("#" + id+"Cari").select2({
                placeholder: "-- Pilih " + nama + " --",
                width: "100%",
                ajax: {
                    url: "@Url.Action("getLookupByTipe", "MasterMapingCapaianPembelajaran")",
                    dataType: 'json',
                    method: "POST",
                    delay: 250,
                    cache: false,
                    data: function (params) {
                        return {
                            Search: params.term || "",
                            Tipe: tipe
                        };
                    },
                    processResults: function (data, params) {
                        return {
                            results: $.map(data, function (item) { return { id: item.Nilai, value: item.Nilai, text: item.Nama } })
                        };
                    },
                }
            });
            $("#" + id + "Cari").change(function () {
                buttonHandler("close");
                $("#fakultasCari").empty();
                $("#prodiCari").empty();
                $("#prodiIdCari").val('');
