
@{
    Layout = null;
}

<div class="modal-content data-content-modal" id="created-email-template">
    <div class="modal-header" style="background-color: #FF8A04; ">
        <h5 class="card-title" style="font-weight: bold; font-size: 30px; color: black;">
            DAFTAR RUANG UJIAN
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <table id="table-data-manage-ujian-mahasiswa" class="table table-bordered table-spacing js-basic-example dataTable display nowrap">
                <thead>
                    <tr>
                        <th class="zero-padding no-border vertical-center center sorting">Action</th>
                        <th class="zero-padding no-border vertical-center center sorting">Kode Mata Kuliah</th>
                        <th class="zero-padding no-border vertical-center center sorting">Seksi</th>
                        <th class="zero-padding no-border vertical-center center sorting">Ruang Ujian</th>
                        <th class="zero-padding no-border vertical-center center sorting">Kapasitas Ruangan</th>
                        <th class="zero-padding no-border vertical-center center sorting">Tanggal</th>
                        <th class="zero-padding no-border vertical-center center sorting">Jam</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var dat in ViewData["dataKelas"] as IEnumerable<MBKM.Entities.Models.MBKM.JadwalUjianMBKM>)
                        {
                            <tr>
                                <td class="zero-padding no-border vertical-center center sorting">
                                    <div class="col" style="text-align:center">
                                        <a href="javascript:void(0)" style="color:black" onclick="indexDetailManageJadwalUjian('@dat.ID')"> <i class="fas fa-file-search coral"></i></a>
                                    </div>
                                </td>
                                <td class="zero-padding no-border vertical-center center sorting">@dat.KodeMatkul</td>
                                <td class="zero-padding no-border vertical-center center sorting">@dat.ClassSection</td>
                                <td class="zero-padding no-border vertical-center center sorting">@dat.RuangUjian</td>
                                <td class="zero-padding no-border vertical-center center sorting">@dat.KapasitasRuangan</td>
                                <td class="zero-padding no-border vertical-center center sorting">@dat.TanggalUjian.ToString("dd/MM/yyyy")</td>
                                <td class="zero-padding no-border vertical-center center sorting">@dat.JamMulai - @dat.JamAkhir</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>
