
@{
    Layout = null;
}
@model MBKM.Entities.Models.MBKM.PerjanjianKerjasama 

<div class="modal-content data-content-modal" id="update-Kerjasama">
    <div class="modal-header" style="background-color: #FF8A04; ">
        
        <h5 class="card-title" style="font-weight: bold; font-size: 30px; color: black;">
            EDIT PERJANJIAN KERJASAMA
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <input type="text" id="idKerjasama" value="@Model.ID" hidden />
            <div class="form-group row">
                <label for="no" class="col-md-4 col-form-label">No. Kerjasama</label>
                <div class="col-md-8">
                    <input id="NoPerjanjian" type="text" name="NoPerjanjian" class="form-control" value="@Model.NoPerjanjian">
                </div>
            </div>
            <div class="form-group row">
                <label for="tanggalKerjasama" class="col-md-4 col-form-label">Tanggal Kerjasama</label>
                <div class="col-md-8">
                    <input id="TanggalMulai" type="date" name="TanggalMulai" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label for="tanggalBerakhir" class="col-md-4 col-form-label">Tanggal Berakhir</label>
                <div class="col-md-8">
                    <input id="TanggalAkhir" type="date" name="TanggalAkhir" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label for="Instansi" class="col-md-4 col-form-label">Instansi</label>
                <div class="col-md-8">
                    <select name="instansi" id="instansi" class="form-control">
                        <option value="" disabled selected>--Pilih Perusahaan/Universitas--</option>
                        <option value="Perusahaan">Perusahaan</option>
                        <option value="Universitas">Universitas</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="Namainstansi" class="col-md-4 col-form-label">Nama</label>
                <div class="col-md-8">
                    <input id="NamaUniversitas" type="text" name="NamaUniversitas" class="form-control" value="@Model.NamaInstansi">
                </div>
            </div>
            <div class="form-group row">
                <label for="Namaunit" class="col-md-4 col-form-label">Nama Unit/Program Studi</label>
                <div class="col-md-8">
                    <input id="Namaunit" type="text" name="Namaunit" class="form-control" value="@Model.NamaUnit">
                </div>
            </div>
            <div class="form-group row">
                <label for="pertukaran" class="col-md-4 col-form-label">Jenis Pertukaran</label>
                <div class="col-md-8">
                    <select name="JenisPertukaran" id="JenisPertukaran" class="form-control">
                        <option value="" disabled selected>--Pilih Jenis Pertukaran--</option>
                        @{
                            foreach (var data in ViewData["listPerjanjian"] as IEnumerable<MBKM.Entities.ViewModel.VMLookup>)
                            {
                                <option value="@data.Nilai">@data.Nama</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="pertukaran" class="col-md-4 col-form-label">Jenis Kerjasama</label>
                <div class="col-md-8">
                    <select name="JenisKerjasama" id="JenisKerjasama" class="form-control">
                        <option value="" disabled selected>--Pilih Jenis Kerjasama--</option>
                        @{
                            foreach (var data in ViewData["listKerjasama"] as IEnumerable<MBKM.Entities.ViewModel.VMLookup>)
                            {
                                <option value="@data.Nilai">@data.Nama</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputer" class="col-md-4 col-form-label">Inputer</label>
                <div class="col-md-8">
                    <input id="inputer" type="text" name="inputer" class="form-control" value="inputer" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="biaya" class="col-md-4 col-form-label">Biaya</label>
                <div class="col-md-8">
                    <input id="biaya" name="biaya" class="form-control" value="@Model.BiayaKuliah">
                </div>
            </div>
            <div class="modal-footer">
                <input onclick="UpdatePerjanjian()" type="submit" value="Simpan" class="btn" style="float: right; background-color: #FF8A04; color: black; padding: 5px 30px; font-weight: bold; font-size: 20px;" />
            </div>
        </form>
    </div>
</div>
