
@{
    ViewBag.Title = "DHK";
    Layout = "";
}
<head>


    @Styles.Render("~/Content/css")
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400&display=swap" rel="stylesheet">
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Scripts.Render("~/bundles/modernizr")


</head>
<style>

    .box {
        border: solid 1px black;
        padding: 15px 25px;
        margin: 15px 0px;
    }

    body {
        font-family: 'Roboto';
    }

    a:hover {
        cursor: pointer;
    }

    input {
        max-width: 100%;
    }

    select {
        max-width: 100%;
    }

    .footnote {
        margin: 0 20%;
    }

    table.footer tr td {
        text-align: center;
    }

    th {
        background: #B5E0F1;
        padding: 15px 0px;
        font-size: 13px;
    }

    #daga {
        display: inline-block;
    }

    .sempit {
        line-height: 10px;
    }
    /*.abc {
        display: inline-block;
        width:100%;
    }
    h4 {
        font-weight: bold;
        font-size: 40px;

        display: inline-block;
    }*/
</style>


<div class="container-fluid" style="padding: 0px">
    <div class="card center-block" style="background-color: white; width: 100%; padding: 0px">
        <div>
            <div class="abc">
                @* box orange *@
                <img src="~/Asset/Lambang_Unika_Atma_Jaya.png" style="max-height: 75px; margin: 15px 25px;float:left" />
                <h4 style="padding-top: 30px; padding-right: 20px; padding-left: 30px; font-weight: bold; font-size: 30px; color: black; text-align:right">
                    DAFTAR HADIR

                    <br />
                </h4>


            </div>
            <div class="container" style="width: 100%;">

                @*<div class="col" style="text-align:center"><a target="_blank" href="javascript:void(0)" style="color:black" onclick="KHSPage()"><span class="fa fa-download"></span></a></div>*@

                <br />
                <br />

                <div id="daga" class=" col-md-5">
                    <table hidden class="table" style="width: auto;">
                        <tr>
                            <td style="text-align: right">Tahun Semester</td>
                            <td style="width: 400px;">
                                <select name="tahunSemester" id="tahunSemester" class="form-control input-md"></select>
                            </td>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <td style="font-weight:bold;">SEMESTER</td>
                            <td style="padding:5px"> : </td>
                            <td id="semester"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">PROGRAM STUDI</td>
                            <td style="padding:5px"> : </td>
                            <td id="prodi"></td>
                        </tr>
                        <tr>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">KODE MATAKULIAH</td>
                            <td style="padding:5px"> : </td>
                            <td id="kodeMK"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">NAMA MATAKULIAH</td>
                            <td style="padding:5px"> : </td>
                            <td id="namaMK"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold;">SKS</td>
                            <td style="padding:5px"> : </td>
                            <td id="sks"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">DOSEN</td>
                            <td style="padding:5px"> : </td>
                            <td id="dosen"></td>
                        </tr>
                        @* batas kanan *@
                        <tr>
                            <td style="font-weight:bold">SEKSI</td>
                            <td style="padding:5px"> : </td>
                            <td id="seksi"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">KOMPONEN</td>
                            <td style="padding:5px"> : </td>
                            <td id="komponen"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">HARI</td>
                            <td style="padding:5px"> : </td>
                            <td id="hari"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">JAM</td>
                            <td style="padding:5px"> : </td>
                            <td id="jam"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">RUANG</td>
                            <td style="padding:5px"> : </td>
                            <td id="ruang"></td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold">HALAMAN</td>
                            <td style="padding:5px"> : </td>
                            <td id="halaman"></td>
                        </tr>

                    </table>






                </div>
                @*<div class=" col-md-1">
                    </div>*@


                <div>

                </div>
                <table id="countit" width="100%" class="table table-bordered table-striped hover dt-responsive responsive">
                    <colgroup span="5"></colgroup>
                    <thead>
                        <tr>
                            @*<th width="10%">NO</th>*@
                            <th width="5%" style="text-align:center">NO.</th>
                            <th width="20%" style="text-align:center">STUDENT ID </th>
                            <th width="40%" style="text-align:center">NAMA MAHASISWA</th>
                            <th width="10%" style="text-align:center">CEKAL</th>
                            <th width="25%" colspan="5" scope="colgroup" style="text-align:center">TANGGAL</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{int i = 0;}
                        @foreach (var mhs in (IEnumerable<MBKM.Entities.ViewModel.VMDHK>)ViewData["mahasiswas"])
                        {

                    <tr>
                        <td class="mhsList start padding0">
                            <center>
                                @{i = i + 1;}
                            @i
                            <center>
                    </td>
                    <td class="mhsList">@mhs.StudentID</td>
                    <td class="mhsList">@mhs.Nama</td>
                    <td class="mhsList"></td>
                    </tr>//@i++
                                }
                        <!--<tr>
        <td>KodeMataKuliah</td>
        <td>EngMK <br /> NamaMatakuliah</td>
        <td>Seksi</td>
        <td class="count-me">SKS</td>
        <td>tanggal1</td>
        <td>tanggal2</td>
        <td>tanggal3</td>
        <td>tanggal4</td>
        <td>tanggal5</td>-->
                        @*@{total += @employee.SKS;}*@

                        <!--</tr>-->


                    </tbody>

                </table>
               
                @*<div style="overflow-x: auto;">*@


                <br />
                <br />

            </div>



        </div>
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@*@RenderSection("scripts", required: true)*@
<script src="~/Scripts/select2.min.js"></script>
<script>
    $(document).ready(function () {
         $('#semester').html("@ViewData["semester"].ToString()");
         $('#prodi').html("@ViewData["prodi"].ToString()");
         $('#kodeMK').html("@ViewData["kodeMK"].ToString()");
         $('#namaMK').html("@ViewData["namaMK"].ToString()");
         $('#sks').html("@ViewData["sks"].ToString()");
        $('#dosen').html("@ViewData["dosen"].ToString()");
        //kanan
         $('#seksi').html("@ViewData["seksi"].ToString()");
         $('#hari').html("@ViewData["hari"].ToString()");
         $('#jam').html("@ViewData["jam"].ToString()");
         $('#ruang').html("@ViewData["ruang"].ToString()");
    });

</script>