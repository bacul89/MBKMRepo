
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}
@section css{
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/inputResponsive.css">
}

<div class="container-fluid" style="margin-left:40px; margin-right:40px;margin-bottom:100px;">
    <div class="card center-block" style="background-color: white; width: 100%; margin-top: 50px; margin-bottom: 50px;">
        <div class="card-body" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); border:3px solid coral">
            <h4 class="card-title" style="padding-top: 30px; padding-right: 20px; padding-left: 30px; font-weight: bold; font-size: 30px; color: black;">
                DAFTAR MAHASISWA YANG PERLU DIVERIFIKASI
            </h4>
            <hr />
            <div class="container" style="width: 100%;">

                <br />
                <table id="table-data-verifikasi-mahasiswa" class="table row-border hover dt-responsive responsive" style="border-spacing: 0 15px; border:0">
                    <thead class="text-center">
                        <tr style="background-color: #FF8A04; border: 0 ">
                            <th style="text-align:center; font-size:0.8vw">No.</th>
                            <th style="text-align:center; font-size:0.8vw">Universitas Asal</th>
                            <th style="text-align:center; font-size:0.8vw">Jenjang Studi</th>
                            <th style="text-align:center; font-size:0.8vw">Program Studi Asal</th>
                            <th style="text-align:center; font-size:0.8vw">NIM Asal</th>
                            <th style="text-align:center; font-size:0.8vw">Nama Mahasiswa</th>
                            <th style="text-align:center; font-size:0.8vw">Jenis Kelamin</th>
                            <th style="text-align: center; font-size: 0.8vw">Email</th>
                            <th style="text-align: center; font-size: 0.8vw">No. HP</th>
                            <th style="text-align: center; font-size: 0.8vw">Status Verifikasi</th>
                            <th style="text-align: center; font-size: 0.8vw">Action</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script src="~/Scripts/Admin/VerifikasiMahasiswa/main.js"></script>
}


