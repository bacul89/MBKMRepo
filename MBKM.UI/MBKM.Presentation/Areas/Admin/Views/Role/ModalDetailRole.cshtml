
@{
    Layout = null;
}
@model MBKM.Entities.Models.Role

<div class="modal-content data-content-modal" id="detail-Role">
    <div class="modal-header" style="background-color: #FF8A04; ">
        <h5 class="card-title" style="font-weight: bold; font-size: 30px; color: black;">
            DETAIL ROLE
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="Code" class="col-sm-3 control-label">Code</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" name="Code" id="Code" placeholder="Input Code" value="@Model.Code" style="text-transform:uppercase">
                </div>
            </div>
            <div class="form-group">
                <label for="RoleName" class="col-sm-3 control-label">Role Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" name="RoleName" id="RoleName" placeholder="Input Role Name" value="@Model.RoleName">
                </div>
            </div>
            <div class="form-group">
                <label for="inp_status" class="col-sm-3 control-label">Status</label>
                <div class="col-sm-9">
                    @{
                        if (Model.IsActive)
                        {
                            <input type="email" class="form-control input-pendaftaran" value="Aktif" name="inp_email" id="inp_email" placeholder="Input Subject Email" disabled>
                        }
                        else
                        {
                            <input type="email" class="form-control input-pendaftaran" value="Tidak Aktif" name="inp_email" id="inp_email" placeholder="Input Subject Email" disabled>
                        }
                    }
                </div>
            </div>
        </form>
    </div>
</div>
