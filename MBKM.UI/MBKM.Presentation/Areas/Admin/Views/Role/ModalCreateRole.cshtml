
@{
    Layout = null;
}

<div class="modal-content data-content-modal" id="created-Role">
    <div class="modal-header" style="background-color: #FF8A04; ">
        <h5 class="card-title" style="font-weight: bold; font-size: 30px; color: black;">
            TAMBAH ROLE
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="Code" class="col-sm-3 control-label">Code</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" name="Code" id="Code" placeholder="Input Code" style="text-transform:uppercase">
                </div>
            </div>
            <div class="form-group">
                <label for="RoleName" class="col-sm-3 control-label">Role Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control input-pendaftaran input-data" name="RoleName" id="RoleName" placeholder="Input Role Name">
                </div>
            </div>
            <div class="form-group">
                <label for="Status" class="col-sm-3 control-label">Status</label>
                <div class="col-sm-9">
                    <label class="radio-inline input-pendaftaran">
                        <input type="radio" name="IsActive" id="IsActive" value="true"> Aktif
                    </label>
                    <label class="radio-inline input-pendaftaran">
                        <input type="radio" name="IsActive" id="IsActive" value="false"> Tidak Aktif
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-md-offset-10">
                    <button type="button" onclick="PostCreate()" class="btn btn-warning">Simpan</button>
                </div>
            </div>
        </form>
    </div>
</div>
