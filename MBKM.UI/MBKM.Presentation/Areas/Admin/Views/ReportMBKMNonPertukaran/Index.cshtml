
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout2.cshtml";
}

@section css{

    <link rel="stylesheet" type="text/css" href="~/Content/Admin/inputResponsive.css">
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/sweetalert2.all.min.js"></script>
}

<div class="card-body responsive-content" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2); border: 3px solid coral; padding: 0px">
    <h6 class="card-title" style="padding-top: 30px; padding-right: 20px; padding-left: 30px; font-weight: bold; font-size: 25px; color: black;">
        REPORT MBKM PERTUKARAN INTERNAL<br />
    </h6>
    <hr />
    <div class="container" style="width: 100%;">
        <div class="">
            <form class="form-horizontal col-md-5">
                <div class="form-group">
                    <br />
                    <label for="inp_semester" class="col-sm-3 control-label">Tahun Semester</label>
                    <div class="col-sm-7">
                        <select name="inp_semester" id="inp_semester" class="form-control select2 input-md input-data">
                            <option value="" selected disabled>-- Pilih Tahun Semester --</option>
                            @{
                                foreach (var dt in ViewData["semester"] as IEnumerable<MBKM.Entities.ViewModel.VMSemester>)
                                {
                                    <option value="@dt.Nilai">@dt.Nama</option>
                                }
                            }
                        </select>
                        <br />
                        <br />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 ">
                        <button type="button" id="cari" class="btn btn-success" style="width: 10vw" onclick="GenerateDataTable()"><span class="fa fa-search"></span> CETAK PDF</button>
                        <button type="button" id="cari" class="btn btn-danger" style="width: 10vw" onclick="GenerateDataTable()"><span class="fa fa-search"></span> CETAK EXCEL</button>
                    </div>
                </div>
            </form>
        </div>
        <!--table-responsive-->
        <table id="table-data-rekap-non-pertukaran" class="table row-border hover dt-responsive responsive">
            <thead style="border-spacing: 0 0px; border:0">
                <tr>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">No</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Tahun Semester</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Jenjang Studi</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">NIM</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Nama Mahasiswa</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Program Studi</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Jenis Kegiatan MBKM</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Judul Aktivitas</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Lokasi Aktivitas</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Nomor SK Tugas</th>
                    <th rowspan="2" class="zero-padding2 small-text vertical-center center ">Tanggal SK Tugas</th>
                    <th colspan="5" class="zero-padding2 small-text vertical-center center ">Nilai Penyetaraan Kegiatan MBKM</th>
                </tr>
                <tr>
                    <th class="zero-padding2 small-text vertical-center center ">Kode Mata Kuliah Asal</th>
                    <th class="zero-padding2 small-text vertical-center center ">Nama Mata Kuliah Asal </th>
                    <th class="zero-padding2 small-text vertical-center center ">SKS</th>
                    <th class="zero-padding2 small-text vertical-center center ">Nilai Angka</th>
                    <th class="zero-padding2 small-text vertical-center center ">Nilai Huruf</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
        <br />
        <br />
        <br />
        <br />
    </div>
</div>

@section scripts{
    <script src="~/Scripts/Admin/ReportMBKMNonPertukaran/main.js"></script>
}



