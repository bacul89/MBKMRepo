@{
    ViewBag.Title = "Bap";
}

<html>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h5 class="card-title" style="padding-top: 15px; padding-right: 15px; padding-left: 0px; font-weight: bold; font-size: 20px; color: black; ">
        FORMULIR


        

    </h5>
    <h5 class="card-title" style="padding-top: 0px; padding-right: 15px; padding-left: 0px; font-weight: bold; font-size: 20px; color: black; ">

        

        DOKUMENTASI KEGIATAN PERKULIAHAN ONLINE
        <p style="font-weight: normal; font-size: 15px;font-style:italic; ">Sebagai Pengganti Perkuliahan Tatap Muka</p>
    </h5>
    @*<div style="text-align:right">@Html.ActionLink("Print BAP", "PrintDetail")</div>*@
   
    <div style="text-align:right">
        
        @*<button onclick="@Url.Action("PrintDetail", "SummaryPresensi")" ;class="btn btn-success"><i class="fas fa-plus-circle"></i> Download pdf</button>*@
        @*<input type="button" value="Download PDF" onclick="location.href='@Url.Action("PrintDetail", "SummaryPresensi")?id='+ @Model" />*@
        @*<a href="javascript:void(0)" style="color:black" onclick="@Url.Action("PrintDetail", "SummaryPresensi")"><i class="fas fa-edit"></i></a>*@
    </div>

    <table style="width:100%">
        <tr>
            <th>NIM:</th>
            <td id="nim"></td>

            <th>Program Studi:</th>
            <td id="prodi"></td>
        </tr>
        <tr>
            <th>Nama Mahasiswa:</th>
            <td id="nama"></td>

            <th>Nama Mata Kuliah:</th>
            <td id="namaMK"></td>
        </tr>
        <tr>
            <th>Universitas Asal:</th>
            <td id="univ"></td>

            <th>Kode Mata Kuliah:</th>
            <td id="kodeMK"></td>
        </tr>
        <tr>
            <th></th>
            <td></td>
            <th>Seksi:</th>
            <td id="seksi"></td>
        </tr>
    </table>
    <br>
    <br>
    <br>

    <table style="width:100%">
        <tr>
            <th>Tanggal Pertemuan</th>
            <th>Topik Perkuliahan Sesuai RPS</th>
            <th>Penyesuaian Bentuk Pembelajaran dengan online learning (metode dan aktivitas)</th>
            <th>Platform/aplikasi yang digunakan</th>
            <th>Kehadiran Mahasiswa</th>
            <th>Evaluasi Perkuliahan online</th>
            <th>Dosen</th>
        </tr>
        <tr>
            <td id="tanggal"></td>
            @*tanggal pertemuan*@
            <td></td>
            @*topik perkuliahan*@
            <td></td>
            @*metode dan aktivitas*@
            <td></td>
            @*platform yangdigunakan*@
            <td id="present"></td>
            @*status kehadira*@
            <td></td>
            @*evaluasi perkuliahan*@
            <td id="dosen"></td>
            @*Dosen pengajar*@
        </tr>
    </table>
    <br />
    <br />
</body>
</html>

@section Scripts{
    <script>
        var mataKuliah = null;
        $(document).ready(function () {
            $('#nama').html("@ViewData["nama"].ToString()");
            $('#nim').html("@ViewData["nim"].ToString()");
            $('#univ').html("@ViewData["univ"].ToString()");
            $('#dosen').html("@ViewData["dosen"].ToString()");
            $('#prodi').html("@ViewData["prodi"].ToString()");
            $('#namaMK').html("@ViewData["namaMK"].ToString()");
            $('#kodeMK').html("@ViewData["kodeMK"].ToString()");
            $('#seksi').html("@ViewData["seksi"].ToString()");
            $('#tanggal').html("@ViewData["tanggal"].ToString()");
           
            if ("@ViewData["present"].ToString()" == "True") {

                $('#present').html("Hadir");
            }
            else {
                $('#present').html("Tidak Hadir");
            }

        });
    </script>

}
