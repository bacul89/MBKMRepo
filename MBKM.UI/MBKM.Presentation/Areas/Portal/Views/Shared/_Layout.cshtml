<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    body {
        padding-top: 105px;
    }
    a:hover {
        cursor: pointer;
    }
    input {
        max-width: 100%;
    }
    select {
        max-width: 100%;
    }
</style>
<body>
    <div class="navbar navbar-fixed-top" style="background-color: #FF8A04;">
        <img src="~/Asset/Lambang_Unika_Atma_Jaya.png" style="max-height: 75px; margin: 15px 25px;" />
    </div>

    <div class="body-content">
        @RenderBody()
        <footer style="background-color: white; position: fixed; left: 0; bottom: 0; width: 100%; text-align: center; ">
            <p> &copy; Copyright 2021 Universitas Katolik Indonesia Atma Jaya - All Right Reserved</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>