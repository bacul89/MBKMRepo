<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/Admin/AdminCostumeBS4.css">
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @RenderSection("css", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    body {
        padding-top: 105px;
        font-family: 'Roboto';
    }
    a:hover {
        cursor: pointer;
    }
    input {
        max-width: 100%;
    }
    select {
        max-width: 100%;
    }
    .split {
        height: 96%;
        position: fixed;
        z-index: 1;
        top: 0;
        overflow-x: hidden;
        padding-top: 105px;
    }

    /* Control the left side */
    .left {
        left: 0;
        width: 20%;
    }

    /* Control the right side */
    .right {
        right: 0;
        width: 80%;
    }
    li {
        border: solid;
        border-color: #FF8A04;
        border-radius: 5px;
        margin: 10px;
        border-width: 1px;
    }
    li a {
        color: #FF8A04;
    }

    li a:focus {
        color: #FF8A04;
    }
        
    li a:hover {
        color: #FF8A04;
    }
    textarea {
        max-width: 100%;
    }
</style>
<body>
    @RenderSection("modal", required: false)
    <div class="body-content split right">
        <nav>
            <ul class="nav split left">
                <li>
                    <a href="#" id="btn" data-toggle="collapse" data-target="#submenu1" aria-expanded="false">Pendaftaran MBKM</a>
                    <ul class="nav collapse" id="submenu1" role="menu" aria-labelledby="btn-1">
                        <li><a href="@Url.Action("Index","DataDiri")">Data Diri & Pendukung</a></li>
                        <li><a href="@Url.Action("Index","PendaftaranMataKuliah")">Pendaftaran Mata Kuliah</a></li>
                        <li><a href="@Url.Action("Index","TrackingStatusPendaftaran")">Tracking Pendaftaran</a></li>
                        <li><a href="@Url.Action("Index","NimDigital")">Nomor Induk Mahasiswa</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#" id="btn" data-toggle="collapse" data-target="#submenu2" aria-expanded="false">Perkuliahan MBKM</a>
                    <ul class="nav collapse" id="submenu2" role="menu" aria-labelledby="btn-1">
                        <li><a href="@Url.Action("Index","JadwalKuliahMahasiswa")">Jadwal Perkuliahan</a></li>
                        <li><a href="@Url.Action("Index","JadwalUjian")">Jadwal Ujian</a></li>
                        <li><a href="@Url.Action("Index","PresensiKelas")">Presensi Kelas</a></li>
                        <li><a href="@Url.Action("Index","PresensiUjian")">Presensi Ujian</a></li>
                        <li><a href="@Url.Action("Index","LinkFasilitasMahasiswa")">Link Fasilitas Perkuliahan</a></li>
                        <li><a href="@Url.Action("Index","SummaryPresensi")">Summary Presensi</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#" id="btn" data-toggle="collapse" data-target="#submenu3" aria-expanded="false">Output MBKM</a>
                    <ul class="nav collapse" id="submenu3" role="menu" aria-labelledby="btn-1">
                        <li><a href="@Url.Action("Index","FeedBackMatakuliah")">Feedback Perkuliahan</a></li>
                        <li><a href="@Url.Action("Index","JadwalUjian")">Kartu Hasil Studi MBKM</a></li>
                        <li><a href="@Url.Action("Index","PresensiKelas")">Transkrip Nilai MBKM</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        @RenderBody()
        <div class="navbar navbar-fixed-top" style="background-color: #FF8A04;">
            <img src="~/Asset/Lambang_Unika_Atma_Jaya.png" style="max-height: 75px; margin: 15px 25px;" /><!-- Avatar -->
            <div class="dropdown" style="float: right; margin: 27.5px; ">
                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    <img src="https://mdbootstrap.com/img/new/avatars/2.jpg" class="img-rounded" height="50" alt="" />
                    <asd style="color: black; font-weight: bold; font-size: 16px;">@HttpContext.Current.Session["nama"].ToString()</asd>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="@Url.Action("logout", "home")">Logout</a>
                    </li>
                </ul>
            </div>
            <footer style="height: 3%; background-color: white; vertical-align: central; position: fixed; left: 0; bottom: 0; width: 100%; text-align: center; font-size: auto">
                <p> &copy; Copyright 2021 Universitas Katolik Indonesia Atma Jaya - All Right Reserved</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.js"></script>
        <script src="~/Scripts/select2.min.js"></script>
        <script>
        </script>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>